{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./typechain-types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
