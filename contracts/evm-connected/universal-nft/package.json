{
  "name": "@universal-nft/evm-contracts",
  "version": "1.0.0",
  "description": "EVM Connected NFT contracts",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia_testnet",
    "deploy:base": "hardhat run scripts/deploy.ts --network base_sepolia",
    "configure": "hardhat run scripts/configure.ts",
    "lint": "solhint 'contracts/**/*.sol'",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.0.0",
    "@types/node": "^20.0.0",
    "hardhat": "^2.19.0",
    "typescript": "^5.0.0",
    "solhint": "^4.0.0"
  },
  "dependencies": {
    "@zetachain/standard-contracts": "^1.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "ethers": "^5.7.2",
    "dotenv": "^16.0.0"
  }
}